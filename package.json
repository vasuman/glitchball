{
  "name": "glitchball-web",
  "version": "1.0.0",
  "description": "Web client for Glitchball",
  "main": "index.js",
  "scripts": {
    "lint": "eslint -c .eslintrc.json src/",
    "dev": "uglifyjs -b -o build/out.js -- src/*.js",
    "shaders": "node shaders.js shaders/ src/shader-strings.js",
    "serve": "http-server build/",
    "watch": "nodemon -e js,vert,frag --ignore build/ --ignore src/shader-strings.js --exec 'npm run shaders && npm run dev'",
    "publish": "gh-pages -d build/"
  },
  "keywords": [
    "game",
    "football"
  ],
  "author": "Vasuman",
  "license": "ISC",
  "dependencies": {
    "glob": "^7.0.5",
    "uglify-js": "^2.7.2"
  },
  "devDependencies": {
    "eslint": "^3.3.1",
    "gh-pages": "^0.11.0",
    "http-server": "^0.9.0",
    "nodemon": "^1.10.0"
  }
}
